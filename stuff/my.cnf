[mysqld]
innodb_file_per_table=1
max_connections=500
log-slow-queries
safe-show-database
innodb_buffer_pool_size=4000000000
query_cache_size=1000000000
query_cache_limit=2000000
key_buffer_size=100000000
thread_cache_size=4
sort_buffer_size=4000000
read_rnd_buffer_size=500000
table_cache=128
tmp_table_size=16000000
max_heap_table_size=16000000
innodb_lock_wait_timeout=60